<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".DormSpot"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:supportsRtl="true"
        tools:targetApi="31">

        <!-- Splash (Launcher) Activity -->
        <activity
            android:name="com.example.dormspot.OnLaunch.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other activities -->
        <activity
            android:name="com.example.dormspot.OnLaunch.SignUpActivity"
            android:exported="false" />

        <activity
            android:name="com.example.dormspot.OnLaunch.RegisterActivity"
             />

        <activity
            android:name="com.example.dormspot.OnLaunch.LoginActivity">

        </activity>

        <activity
            android:name="com.example.dormspot.OnLaunch.VerifyActivity"
            android:exported="false"
            tools:ignore="Instantiatable" />

    </application>
</manifest>
