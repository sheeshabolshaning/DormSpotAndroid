<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1FFE7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Optional Top Bar with Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="horizontal"
            android:gravity="end">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_circle"
                android:src="@drawable/back"
                android:backgroundTint="#BE191A3D"
                android:contentDescription="Back" />

            <ImageButton
                android:id="@+id/chatButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_circle"
                android:src="@drawable/chat"
                android:backgroundTint="#BE191A3D"
                android:contentDescription="Chat" />

            <ImageButton
                android:id="@+id/profileButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_circle"
                android:src="@drawable/user"
                android:backgroundTint="#C3191A3D"
                android:contentDescription="Profile" />
        </LinearLayout>

        <!-- Main Content Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:elevation="6dp"
            android:backgroundTint="@android:color/white"
            app:cardCornerRadius="24dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Dorm Title -->
                <TextView
                    android:id="@+id/dormTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dorm Title"
                    android:textColor="#1A1B40"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/neuebold" />

                <!-- Location -->
                <TextView
                    android:id="@+id/locationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Bakakeng Sur"
                    android:textColor="#1A1B40"
                    android:textSize="14sp"
                    android:fontFamily="@font/neuemedium" />

                <!-- Landlord -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/esther" />

                    <TextView
                        android:id="@+id/landlordNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  Esther Sandy"
                        android:textColor="#555555"
                        android:textSize="14sp"
                        android:fontFamily="@font/neuemedium" />
                </LinearLayout>

                <!-- Description -->
                <TextView
                    android:id="@+id/descriptionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Description goes here."
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:fontFamily="@font/neuemedium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Read More"
                    android:textColor="#1A1B40"
                    android:textStyle="bold" />

                <!-- Icons Row -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:overScrollMode="never"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="91dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/bedroom" />

                        <ImageView
                            android:layout_width="58dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/bath" />

                        <ImageView
                            android:layout_width="76dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/parking" />

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/other" />
                    </LinearLayout>
                </HorizontalScrollView>

                <!-- Price and Book Now -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/priceText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚±0/month"
                            android:textColor="#1A1B40"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/neuebold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="cs not included"
                            android:textColor="#888888"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/bookNowBtn"
                        android:layout_width="178dp"
                        android:layout_weight="0.3"
                        android:layout_height="43dp"
                        android:background="@drawable/rounded_button2"
                        android:text="Book Now"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:fontFamily="@font/neuebold" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
