<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1FFE7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="550dp">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/propertyImagePager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="12dp"
                android:background="@drawable/bg_circle"
                android:contentDescription="Back"
                android:src="@drawable/back"
                android:backgroundTint="#BE191A3D" />

            <ImageButton
                android:id="@+id/chatButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="72dp"
                android:background="@drawable/bg_circle"
                android:contentDescription="Chat"
                android:src="@drawable/chat"
                android:backgroundTint="#BE191A3D" />

            <ImageButton
                android:id="@+id/profileButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="12dp"
                android:background="@drawable/bg_circle"
                android:contentDescription="Profile"
                android:src="@drawable/user"
                android:backgroundTint="#C3191A3D" />
        </RelativeLayout>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_button2"
            android:backgroundTint="@android:color/white"
            android:elevation="4dp"
            android:padding="20dp">

            <!-- 🏠 Dorm Title (Dynamic) -->
            <TextView
                android:id="@+id/dormTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dorm Title"
                android:textColor="#1A1B40"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- 📍 Location (can remain static or dynamic later) -->
            <TextView
                android:id="@+id/locationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Bakakeng Sur"
                android:textColor="#555555"
                android:textSize="14sp" />

            <!-- 👤 Landlord Name -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/esther" />

                <TextView
                    android:id="@+id/landlordNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Esther Sandy"
                    android:textColor="#555555"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 📝 Description (Dynamic) -->
            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Description goes here."
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Read More"
                android:textColor="#1A1B40"
                android:textStyle="bold" />

            <!-- Scrollable Icons Row -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:overScrollMode="never"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="91dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/bedroom" />

                    <ImageView
                        android:layout_width="58dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/bath" />

                    <ImageView
                        android:layout_width="76dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/parking" />

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/other" />
                </LinearLayout>
            </HorizontalScrollView>

            <!-- 💵 Price + Book Now -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.7"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 💰 Price (Dynamic) -->
                    <TextView
                        android:id="@+id/priceText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₱0/month"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="cs not included"
                        android:textColor="#888888"
                        android:textSize="14sp" />
                </LinearLayout>

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button2"
                    android:backgroundTint="#1A1A7F"
                    android:text="Book Now"
                    android:textAllCaps="false"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
