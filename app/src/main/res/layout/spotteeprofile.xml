<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1FFE7">

    <!-- Profile Image (Floating at top) -->
    <FrameLayout
        android:id="@+id/profileImageContainer"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile_placeholder"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_image_bg"
            android:clipToOutline="true" />

        <ImageView
            android:id="@+id/editIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/rounded_white_circle"
            android:padding="4dp" />
    </FrameLayout>

    <!-- Title BELOW the profile picture -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spotee’s Profile"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1B1B1B"
        app:layout_constraintTop_toBottomOf="@id/profileImageContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Card with content -->
    <LinearLayout
        android:id="@+id/cardContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_container_bg"
        android:paddingTop="72dp"
        android:paddingBottom="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"
        android:elevation="4dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Name -->
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esther Sandy"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Email -->
        <TextView
            android:id="@+id/userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="esthersandy123@gmail.com"
            android:textColor="#C7C7C7"
            android:textSize="14sp" />

        <!-- Phone -->
        <TextView
            android:id="@+id/userPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(+63) 901 264 7654"
            android:textColor="#C7C7C7"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <!-- Listings Made -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Listings Made"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:paddingHorizontal="16dp" />

        <!-- Dummy Listings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Womens Dormitory (Whole House) for Rent in Balekkang Norte"
            android:textColor="#2F2D52"
            android:padding="12dp"
            android:layout_margin="12dp"
            android:background="@drawable/rounded_button_white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bungalow Apartment for rent in Ciudad Grande Phase III"
            android:textColor="#2F2D52"
            android:padding="12dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_button_white" />

        <!-- Ratings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ratings"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:paddingHorizontal="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="“10/10 mamsh isahat, friendly yung landlady, will stay again...”"
            android:textColor="#1B1B1B"
            android:textSize="14sp"
            android:padding="12dp"
            android:layout_margin="12dp"
            android:background="@drawable/rounded_rating_bubble"
            android:lineSpacingExtra="2dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
