<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listing3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF8E5"
    tools:context="com.example.dormspot.MainAcitivitySpottee.listing3">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top App Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:background="@drawable/rounded_topbar"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/dormlandlord" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="12dp"
                android:text="@string/dorm_spot"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry"
                android:fontFamily="@font/wafflesoft"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/searchwhite"
                app:tint="#FFFFFF" />
        </LinearLayout>

        <!-- Tabs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="1dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                style="@style/TabButton"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button2"
                android:backgroundTint="#3C396A"
                android:text="My listing"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/neuebold"/>

            <Button
                style="@style/TabButton"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button2"
                android:backgroundTint="#618EC0"
                android:text="Statistic"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/neuebold"/>

            <Button
                style="@style/TabButton"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button2"
                android:backgroundTint="#618EC0"
                android:text="Reviews"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/neuebold"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Listing 1: Unoccupied -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="156dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_card"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cuidad Grande Phase 2 Bedroom and Office Unit"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/neuebold"/>

                    <LinearLayout
                        android:layout_width="355dp"
                        android:layout_height="wrap_content"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Capacity: "
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="@font/neuebold"/>

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="44dp"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price: "
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="@font/neuebold"/>

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="279dp"
                            android:layout_height="wrap_content"
                            android:text="â‚±12,000"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="125dp"
                            android:text="Approved"
                            android:textColor="#52FD15"
                            android:textStyle="italic|bold"
                            android:fontFamily="@font/roboto"/>

                        <Button
                            android:id="@+id/button_post_listing"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_button2"
                            android:text="Post listing"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/neuebold"
                            android:textAllCaps="false"/>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/rounded_button2"
                            android:src="@drawable/editicon"
                            app:tint="#FFFFFF" />

                    </LinearLayout>
                </LinearLayout>


                <!-- Listing 2: Occupied -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="224dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_card"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:fontFamily="@font/neuebold">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/titleView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Title: "
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="@font/neuebold"/>

                        <TextView
                            android:id="@+id/locationView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location: "
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="@font/neuebold"/>

                        <TextView
                            android:id="@+id/capacityView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Capacity: "
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="@font/neuebold"/>

                        <TextView
                            android:id="@+id/priceView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price: "
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="@font/neuebold"/>

                        <TextView
                            android:id="@+id/inclusionView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Inclusion: "
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="@font/neuebold"/>

                        <TextView
                            android:id="@+id/descriptionView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description: "
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:fontFamily="@font/neuebold"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="170dp"
                            android:text="Pending"
                            android:textColor="#FD8515"
                            android:textStyle="italic|bold"
                            android:fontFamily="@font/roboto"/>

                        <Button
                            android:id="@+id/button_view_listing"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_button2"
                            android:text="View listing"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/neuebold"
                            android:textAllCaps="false"/>

                    </LinearLayout>
                </LinearLayout>

                <!-- Listing 3: Occupied -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="127dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_card"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eagle Crest Phase 2 Solo Room"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Listing rejected Rejection Reason: Overpricing"
                        android:textColor="#CCCCCC"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="165dp"
                            android:text="Rejected"
                            android:textColor="#E84235"
                            android:textStyle="italic|bold"
                            android:fontFamily="@font/roboto"/>

                        <Button
                            android:id="@+id/button_remove_listing"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_button2"
                            android:text="Remove"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/neuebold"
                            android:textAllCaps="false"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <!--nav -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_topbar"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/nearp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="32dp"
                android:src="@drawable/chat" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/circle_mask"
                android:backgroundTint="@color/white"
                android:src="@drawable/nav_dorm" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="32dp"
                android:src="@drawable/bell" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/user" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>