<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="#424470">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Summary Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_dormName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dorm Name"
                    android:textColor="#F1FFE7"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/neuebold" />

                <TextView
                    android:id="@+id/textView_dormCapacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Capacity: 4"
                    android:textColor="#C2E7DA"
                    android:textSize="12sp"
                    android:fontFamily="@font/neuebold" />

                <TextView
                    android:id="@+id/textView_dormPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚±5,000/month"
                    android:textColor="#F1FFE7"
                    android:textSize="18sp"
                    android:fontFamily="@font/neuebold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/textView_dormStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status: pending"
                        android:textColor="#FFDE59"
                        android:textStyle="italic"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto" />

                    <ImageView
                        android:id="@+id/button_edit_listing"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/rounded_button2"
                        android:src="@drawable/editicon"
                        android:padding="2dp"
                        card_view:tint="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Expandable Layout -->
        <LinearLayout
            android:id="@+id/expandableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:visibility="gone">

            <!-- Static display -->
            <TextView
                android:id="@+id/textView_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location: Bakakeng Sur"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_inclusions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inclusions: Kitchen, Bed"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_landmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Landmark: "
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/textView_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description: Cozy unit"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <!-- Editable -->
            <EditText
                android:id="@+id/edit_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Edit Location"
                android:visibility="gone"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_landmark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Edit Landmark"
                android:visibility="gone"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/edit_inclusions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Edit Inclusions"
                android:visibility="gone"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edit_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Edit Description"
                android:visibility="gone"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:textSize="14sp" />

            <!-- Submit -->
            <Button
                android:id="@+id/button_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Changes"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="@font/neuebold"
                android:visibility="gone"
                android:background="@drawable/rounded_button_10"
                android:backgroundTint="#1A1B41"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
