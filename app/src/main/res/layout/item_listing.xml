<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="#424470">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top row with image and summary -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_dorm"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="12dp"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_card"
                android:src="@drawable/placeholder" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_dormName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eagle Crest Phase 1 Bedspacer"
                    android:textColor="#F1FFE7"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/neuebold" />

                <TextView
                    android:id="@+id/textView_dormCapacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Capacity: 4"
                    android:textColor="#C2E7DA"
                    android:textSize="12sp"
                    android:fontFamily="@font/neuebold" />

                <TextView
                    android:id="@+id/textView_dormPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚±5,000/month"
                    android:textColor="#F1FFE7"
                    android:textSize="18sp"
                    android:fontFamily="@font/neuebold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/textView_dormStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status: occupied"
                        android:textColor="#FF0000"
                        android:textStyle="italic"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto" />

                    <ImageView
                        android:id="@+id/button_edit_listing"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/rounded_button2"
                        android:src="@drawable/editicon"
                        android:padding="2dp"
                        card_view:tint="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- EXPANDABLE CONTENT BELOW -->
        <LinearLayout
            android:id="@+id/expandableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="12dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location: Bakakeng Sur"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_inclusions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inclusions: Solo Bed, Kitchen, Restroom"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description: Spacious room with a great view perfect for a student"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <!-- Image row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <ImageView
                    android:id="@+id/imageView_room1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder" />

                <ImageView
                    android:id="@+id/imageView_room2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="12dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder" />
            </LinearLayout>

            <!-- Submit button -->
            <Button
                android:id="@+id/button_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button_10"
                android:backgroundTint="#1A1B41"
                android:layout_marginTop="16dp"
                android:text="Submit"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/neuebold" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
