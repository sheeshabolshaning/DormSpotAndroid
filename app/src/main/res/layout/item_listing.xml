<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="#424470">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Dorm Image -->
        <ImageView
            android:id="@+id/imageView_dorm"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_card"
            android:src="@drawable/placeholder" />

        <!-- Text Information Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_dormName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eagle Crest Phase 1 Bedspacer"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/neuebold"/>

            <TextView
                android:id="@+id/textView_dormCapacity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Capacity: 4"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:fontFamily="@font/roboto"/>

            <TextView
                android:id="@+id/textView_dormPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚±5,000/month"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:fontFamily="@font/roboto"/>

            <TextView
                android:id="@+id/textView_dormLandlord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Landlord: John Doe"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:fontFamily="@font/roboto"/>

            <TextView
                android:id="@+id/textView_dormStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unoccupied"
                android:textColor="#52FD15"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"/>

            <!-- Edit Button -->
            <ImageView
                android:id="@+id/button_edit_listing"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/rounded_button2"
                android:src="@drawable/editicon"
                card_view:tint="#FFFFFF" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
