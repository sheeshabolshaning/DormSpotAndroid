<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F1FFE7"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivitySpottr.Home">

    <View
        android:id="@+id/titlebar"
        android:layout_width="397dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rounded_titlebar"
        android:padding="0dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/dorm_spot"
        android:layout_width="216dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="90dp"
        android:fontFamily="@font/wafflesoft"
        android:gravity="center_horizontal|center_vertical"
        android:lineSpacingExtra="-20sp"
        android:text="@string/dorm_spot"
        android:textAppearance="@style/dorm_spot"
        app:layout_constraintBottom_toTopOf="@+id/recent"
        app:layout_constraintTop_toBottomOf="@+id/titlebar"
        app:layout_constraintVertical_bias="0.486"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="82dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="66dp"
        android:layout_height="58dp"
        android:src="@drawable/logo"
        android:visibility="visible"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="25dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/search"
        android:visibility="visible"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="367dp"
        tools:layout_editor_absoluteY="42dp" />

    <Button
        android:id="@+id/recent"
        android:layout_width="128dp"
        android:layout_height="42dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/recent"
        android:fontFamily="@font/neuebold"
        android:text="Verifications"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="104dp" />

    <Button
        android:id="@+id/rectangle_3"
        android:layout_width="128dp"
        android:layout_height="42dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/recent"
        android:fontFamily="@font/neuebold"
        android:text="Spotees"
        android:textAllCaps="false"
        android:textColor="#F1FFE7"
        android:textSize="18dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="104dp" />

    <Button
        android:id="@+id/rectangle_4"
        android:layout_width="128dp"
        android:layout_height="42dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/near"
        android:fontFamily="@font/neuebold"
        android:text="Reports"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="276dp"
        tools:layout_editor_absoluteY="104dp" />

    <ScrollView
        android:layout_width="410dp"
        android:layout_height="655dp"
        tools:ignore="ExtraText,MissingConstraints,SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="165dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#424470"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Profile Header -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/profile_circle_bg"
                        android:scaleType="centerCrop"
                        android:src="@drawable/EstherSandy" />

                    <!-- ðŸ“„ Circular Document Icon -->

                    <ImageView
                        android:id="@+id/imageView18"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/star_icon"
                        tools:layout_editor_absoluteX="113dp"
                        tools:layout_editor_absoluteY="22dp" />

                    <ImageView
                        android:id="@+id/imageView19"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/star_icon"
                        tools:layout_editor_absoluteX="95dp"
                        tools:layout_editor_absoluteY="22dp" />

                    <ImageView
                        android:id="@+id/imageView20"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/star_icon"
                        tools:layout_editor_absoluteX="77dp"
                        tools:layout_editor_absoluteY="22dp" />

                    <ImageView
                        android:id="@+id/imageView21"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/star_icon"
                        tools:layout_editor_absoluteX="59dp"
                        tools:layout_editor_absoluteY="22dp" />

                    <ImageView
                        android:id="@+id/imageView22"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/star_icon"
                        tools:layout_editor_absoluteX="40dp"
                        tools:layout_editor_absoluteY="22dp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/appCompatImageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_copy"
                        app:tint="#FFFFFF"
                        tools:layout_editor_absoluteX="40dp"
                        tools:layout_editor_absoluteY="16dp" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Esther Sandy"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:layout_editor_absoluteX="40dp"
                        tools:layout_editor_absoluteY="0dp" />

                    <ImageView
                        android:id="@+id/documentIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/circle_bg"
                        android:contentDescription="Document Icon"
                        android:padding="8dp"
                        android:src="@drawable/paper"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@android:color/white" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Report Section -->
                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Area: Bakakeng Norte-Sur"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Active Properties: 3"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status: Active"
                    android:textColor="@color/white"
                    android:textSize="12sp" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_margin="1dp"
                    android:layout_marginTop="16dp">


                    <!-- View Report (Left-aligned) -->

                    <Button
                        android:id="@+id/dropdownButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:onClick="toggleReports"
                        android:text="View Report"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="OnClick"
                        tools:layout_editor_absoluteY="0dp" />

                    <LinearLayout
                        android:id="@+id/reportsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <!-- Details Label inside the expandable section -->
                        <TextView
                            android:id="@+id/detailsLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="Details:"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status of Reports"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Water Outage (03-11-24): Resolved"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WiFi Disconnection (07-26-24): Resolved"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bathroom Broken Utilities (10-05-24): Resolved"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Renovation of Room (01-14-25): Resolved"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Change Status (Right-aligned, first button) -->
                    <Button
                        android:id="@+id/changeStatusButton"
                        android:layout_width="120dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/rounded_button2"
                        android:text="Change Status"
                        android:textAllCaps="false"
                        android:textColor="#6290C3"
                        app:layout_constraintEnd_toStartOf="@+id/contactButton"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Contact (Right-aligned, second button) -->
                    <Button
                        android:id="@+id/contactButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_button2"
                        android:text="Contact"
                        android:textAllCaps="false"
                        android:textColor="#6290C3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/bottom_nav_container"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Background Bar -->
        <androidx.cardview.widget.CardView
            android:id="@+id/bottomBarBackground"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true"
            app:cardCornerRadius="32dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#222222">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Cursor Icon -->
                <ImageView
                    android:id="@+id/icon_cursor"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/cursorImage"
                    android:tint="@android:color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="24dp" />

                <!-- Chat Icon -->
                <ImageView
                    android:id="@+id/icon_chat"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/chat"
                    android:tint="@android:color/white"
                    app:layout_constraintStart_toEndOf="@id/icon_cursor"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="24dp" />

                <!-- Notification Icon -->
                <ImageView
                    android:id="@+id/icon_notification"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/notification"
                    app:layout_constraintEnd_toStartOf="@id/icon_moderator"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="24dp"
                    app:tint="@android:color/white" />

                <!-- Moderator Icon -->
                <ImageView
                    android:id="@+id/icon_moderator"
                    android:layout_width="27dp"
                    android:layout_height="26dp"
                    android:src="@drawable/moderator"
                    android:tint="@android:color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="24dp" />

                <!-- Center Icon (was FAB) -->
                <ImageView
                    android:id="@+id/icon_center"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/circle_white"
                    android:elevation="20dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/logocenter"
                    tools:layout_editor_absoluteX="166dp"
                    tools:layout_editor_absoluteY="0dp"
                    tools:ignore="MissingConstraints" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
