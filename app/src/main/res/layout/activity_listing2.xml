<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listing2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF8E5"
    tools:context="com.example.dormspot.MainAcitivitySpottee">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top App Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:background="@drawable/rounded_topbar"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/dormlandlord" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="12dp"
                android:text="@string/dorm_spot"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/wafflesoft"
                tools:ignore="RtlSymmetry" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/searchwhite"
                app:tint="#FFFFFF" />
        </LinearLayout>

        <!-- Tabs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_selector"
                android:text="My listing"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/neuebold"/>

            <Button
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_selector"
                android:text="Statistic"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/neuebold"/>

            <Button
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_selector"
                android:text="Reviews"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/neuebold"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="551dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Listing 1: Unoccupied -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="139dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_card"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="354dp"
                        android:layout_height="wrap_content"
                        android:text="Eagle Crest Phase 1 Bedspacer"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/neuebold"/>

                    <LinearLayout
                        android:layout_width="355dp"
                        android:layout_height="wrap_content"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Capacity: "
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="@font/neuebold"/>

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="44dp"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price: "
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="@font/neuebold"/>

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="279dp"
                            android:layout_height="wrap_content"
                            android:text="â‚±5,000"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="130dp"
                            android:text="Occupied"
                            android:textColor="#52FD15"
                            android:textStyle="bold|italic"
                            android:fontFamily="@font/roboto"/>


                        <Button
                            android:id="@+id/button_view_listing2"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_button2"
                            android:text="View listing"
                            android:textColor="#FFFFFF"
                            android:textAllCaps="false"
                            android:fontFamily="@font/neuebold"/>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/rounded_button2"
                            android:src="@drawable/editicon"
                            app:tint="#FFFFFF" />
                    </LinearLayout>
                </LinearLayout>


                <!-- Listing 2: Occupied -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_card"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Listing Title: "
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="@font/neuebold"/>

                        <EditText
                            android:id="@+id/editTextTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Title"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#FFFFFF"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location: "
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="@font/neuebold"/>

                        <EditText
                            android:id="@+id/editTextLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Location"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#FFFFFF"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="355dp"
                        android:layout_height="wrap_content"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Capacity: "
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="@font/neuebold"/>

                        <EditText
                            android:id="@+id/editTextCapacity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Capacity"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#FFFFFF"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price: "
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="@font/neuebold"/>

                        <EditText
                            android:id="@+id/editTextPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Price"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#FFFFFF"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Inclusion: "
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="@font/neuebold"/>

                        <EditText
                            android:id="@+id/editTextInclusion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Inclusion"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#FFFFFF"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description: "
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="@font/neuebold"/>

                        <EditText
                            android:id="@+id/editTextDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Description"
                            android:textColor="#FFFFFF"
                            android:backgroundTint="#FFFFFF"
                            android:textSize="12sp" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Include Images"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/neuebold"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="143dp"
                        android:gravity="start">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="140dp"
                            android:layout_height="134dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="8dp"
                            app:srcCompat="@drawable/rounded_button2" />

                        <Button
                            android:layout_width="140dp"
                            android:layout_height="134dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/rounded_button2"
                            android:text="+"
                            android:textSize="30dp"
                            app:srcCompat="@drawable/add" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:gravity="center">

                        <Button
                            android:id="@+id/button_submit_listing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:background="@drawable/rounded_button2"
                            android:text="submit"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/neuebold"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <!--nav -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_topbar"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/nearp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="32dp"
                android:src="@drawable/chat" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/circle_mask"
                android:backgroundTint="@color/white"
                android:src="@drawable/nav_dorm" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="32dp"
                android:src="@drawable/bell" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/user" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
