<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reviews"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3FDE8"
    tools:context="com.example.dormspot.MainActivitySpottee.reviews">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:background="@drawable/rounded_topbar"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/dormlandlord" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="12dp"
                android:text="@string/dorm_spot"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry" />

            <ImageView
                app:tint="#FFFFFF"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/searchwhite" />
        </LinearLayout>

        <!-- Navigation Tabs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="1dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                style="@style/TabButton"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button2"
                android:backgroundTint="#3C396A"
                android:text="My listing"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                style="@style/TabButton"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button2"
                android:backgroundTint="#618EC0"
                android:text="Statistic"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                style="@style/TabButton"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button2"
                android:backgroundTint="#618EC0"
                android:text="Reviews"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Reviews List -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/reviews_list_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

            <!-- Review Card 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/review_card_bg"
                    android:backgroundTint="#3E3B74"
                    android:clipToPadding="false"
                    android:elevation="2dp"
                    android:gravity="top"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/circle_mask"
                        android:padding="2dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/editicon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="127dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="210dp"
                            android:layout_height="wrap_content"
                            android:text="Knight Peruz"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="74dp"
                            android:layout_marginTop="4dp"
                            android:text="- Stayed at Eagle Crest for a review of my exams. The room was spacious and comfortable. It eased my living for the past 3 months before I left."
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <RatingBar
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="6dp"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:rating="5"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:stepSize="1" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Review Card 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/review_card_bg"
                    android:backgroundTint="#3E3B74"
                    android:clipToPadding="false"
                    android:elevation="2dp"
                    android:gravity="top"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/circle_mask"
                        android:padding="2dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/editicon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="144dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="210dp"
                            android:layout_height="wrap_content"
                            android:text="Nahs Wakely"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="92dp"
                            android:layout_marginTop="4dp"
                            android:text="- I took a bedspacer on their Eagle Crest rooms and it was a good experience the tenants were nice and the whole dorm had accomoddating equipment had to leave after a month but still good"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp" />

                        <RatingBar
                            style="?android:attr/ratingBarStyleSmall"
                            android:progressTint="@color/star_yellow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginTop="6dp"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:rating="4"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:stepSize="1" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <!-- Bottom Navigation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/rounded_topbar"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/nearp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="32dp"
                android:src="@drawable/chat" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/circle_mask"
                android:backgroundTint="@color/white"
                android:src="@drawable/nav_dorm" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="32dp"
                android:src="@drawable/bell" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/user" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>