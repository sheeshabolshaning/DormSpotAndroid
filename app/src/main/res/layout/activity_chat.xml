<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Chat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF8E5"
    tools:context="com.example.dormspot.MainAcitivitySpottee.chatActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top App Bar -->
        <LinearLayout
            android:id="@+id/titlebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:background="@drawable/rounded_topbar"
            android:backgroundTint="#EEF8E5"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:id="@+id/dorm_spot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="12dp"
                android:text="Chat"
                android:textColor="#3C3969"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/pluscircle"
                app:tint="#FFFFFF" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- chat one -->
                <!-- Circular Avatar -->

                <!-- Message Content Box -->

                <!-- chat two -->
                <LinearLayout
                    android:layout_width="367dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_preview_bubble"
                    android:orientation="vertical"
                    android:padding="12dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/avatarImage"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/circle_green"
                            android:scaleType="centerCrop"
                            android:src="@drawable/esther" />


                        <TextView
                            android:id="@+id/senderName1"
                            android:layout_width="235dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Righour Tanggol"
                            android:textColor="#2B2959"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/messageTime1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2:30"
                            android:textColor="#647685"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_margin="1dp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/messagePreview1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Open po ng viewing ang unit bukas..."
                        android:textColor="#2B2959"
                        android:textSize="14sp" />
                </LinearLayout>

                <!---space-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"/>

                <!-- chat three -->
                <LinearLayout
                    android:layout_width="367dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_preview_bubble"
                    android:orientation="vertical"
                    android:padding="12dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/avatarImage2"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/circle_green"
                            android:scaleType="centerCrop"
                            android:src="@drawable/esther" />


                        <TextView
                            android:id="@+id/senderName2"
                            android:layout_width="254dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Gerry paul"
                            android:textColor="#2B2959"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/messageTime3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1:00"
                            android:textColor="#647685"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_margin="1dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/messagePreview3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12k po ang starting ma'am."
                        android:textColor="#2B2959"
                        android:textSize="14sp" />
                </LinearLayout>

                <!---space-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"/>

                <LinearLayout
                    android:layout_width="367dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_preview_bubble"
                    android:orientation="vertical"
                    android:padding="12dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/avatarImage3"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="12dp"
                            android:scaleType="centerCrop"
                            android:background="@drawable/circle_green"
                            android:src="@drawable/esther"/>


                        <TextView
                            android:id="@+id/senderName3"
                            android:layout_width="259dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Keith Phils"
                            android:textColor="#2B2959"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/messageTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10:45"
                            android:textColor="#647685"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_margin="1dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/messagePreview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paki-check nalang po yung invite.."
                        android:textColor="#2B2959"
                        android:textSize="14sp" />
                </LinearLayout>

                <!---space-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"/>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_topbar"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/nearp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="32dp"
                android:tint="@color/logo_outline_blue"
                android:src="@drawable/chat" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/circle_mask"
                android:backgroundTint="@color/white"
                android:src="@drawable/nav_dorm" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="32dp"
                android:src="@drawable/bell"
                app:tint="@color/logo_outline_blue" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/user" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

