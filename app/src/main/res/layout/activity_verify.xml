<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/mint">

    <!-- Back Button -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/back_button"
            android:src="@drawable/ic_back_arrow"
            app:tint="@color/dormspot_bg" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="286dp"
        android:layout_height="108dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/wafflesoft"
        android:text="@string/verify"
        android:textAlignment="viewStart"
        android:textColor="@color/dormspot_bg"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Text Fields -->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="341dp"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="48dp"
        android:fontFamily="@font/wafflesoft"
        android:text="@string/messageVerify"
        android:textColor="@color/light_blue"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView" />

    <EditText
        android:id="@+id/field1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rectangle_1"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@id/field2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2" />

    <EditText
        android:id="@+id/field4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rectangle_1"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/field3"
        app:layout_constraintTop_toBottomOf="@id/textView2" />

    <EditText
        android:id="@+id/field3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rectangle_1"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@id/field4"
        app:layout_constraintStart_toEndOf="@id/field2"
        app:layout_constraintTop_toBottomOf="@id/textView2" />

    <EditText
        android:id="@+id/field2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rectangle_1"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@id/field3"
        app:layout_constraintStart_toEndOf="@id/field1"
        app:layout_constraintTop_toBottomOf="@id/textView2" />

    <!-- Resend Message -->

    <!-- Sign In Button -->

    <TextView
        android:id="@+id/resend"
        android:layout_width="103dp"
        android:layout_height="26dp"
        android:layout_marginStart="228dp"
        android:layout_marginTop="20dp"
        android:text="@string/resend"
        android:textColor="@color/dormspot_bg"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/field1" />

    <TextView
        android:id="@+id/messageResend"
        android:layout_width="199dp"
        android:layout_height="26dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="180dp"
        android:text="@string/sendACode"
        android:textColor="@color/light_blue"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/field1" />

    <Button
        android:id="@+id/btnGetStarted"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="#1A1B41"
        android:text="@string/getStarted"
        android:textAllCaps="false"
        android:textColor="#1A1B41"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/messageResend" />

</androidx.constraintlayout.widget.ConstraintLayout>
