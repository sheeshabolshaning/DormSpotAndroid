<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF8E5"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.dormspot.AdminActivity.AdminHomeActivity">

    <!-- Top App Bar -->
    <LinearLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:background="@drawable/rounded_topbar"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/dormlandlord"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/dormlandlord" />

        <TextView
            android:id="@+id/dorm_spot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="12dp"
            android:text="@string/dorm_spot"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/wafflesoft" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/searchwhite"
            app:tint="#FFFFFF" />
    </LinearLayout>

    <!-- Listing Status Tabs -->
    <LinearLayout
        android:id="@+id/tabContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="4dp">

            <Button
                android:id="@+id/button_pending"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tab_button_selector"
                android:text="Pending"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/button_approved"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tab_button_selector"
                android:text="Approved"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/button_rejected"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/tab_button_selector"
                android:text="Rejected"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Animated underline indicator -->
        <View
            android:id="@+id/indicator"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_gravity="start"
            android:background="@color/nav_active" />
    </LinearLayout>

    <!-- Dynamic RecyclerView for Listings -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listingRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        tools:listitem="@layout/item_spottee" />

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_topbar"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp">

        <ImageView
            android:id="@+id/nav_nearby"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/nearp" />

        <ImageView
            android:id="@+id/nav_chat"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="32dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/chat" />

        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/circle_mask"
            android:scaleType="centerInside"
            android:padding="5dp"
            android:src="@drawable/nav_dorm" />

        <ImageView
            android:id="@+id/nav_notifications"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="32dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/bell" />

        <ImageView
            android:id="@+id/nav_profile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/useradmin" />
    </LinearLayout>
</LinearLayout>
