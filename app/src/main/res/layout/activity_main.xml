<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1FFE7"
    tools:context=".MainActivitySpottr.Home">

    <!-- Title Bar -->
    <FrameLayout
        android:id="@+id/titlebar"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:background="@drawable/rounded_titlebar"
        android:layout_marginHorizontal="7dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="66dp"
            android:layout_height="58dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="9dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/dorm_spot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/wafflesoft"
            android:lineSpacingExtra="-20sp"
            android:text="@string/dorm_spot"
            android:textAppearance="@style/dorm_spot" />
    </FrameLayout>

    <!-- Merged Tab Buttons -->
    <LinearLayout
        android:id="@+id/tab_buttons"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/titlebar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/my_listings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:background="@drawable/button_selector"
            android:text="Recent"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:fontFamily="@font/neuebold" />

        <Button
            android:id="@+id/statistic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:background="@drawable/button_selector"
            android:text="Near Me"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:fontFamily="@font/neuebold" />

        <Button
            android:id="@+id/reviews"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:text="Highly Rated"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:fontFamily="@font/neuebold" />
    </LinearLayout>

    <!-- ScrollView Content -->
    <ScrollView
        android:id="@+id/card_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/tab_buttons"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Card 1 -->
            <FrameLayout
                android:layout_width="350dp"
                android:layout_height="370dp"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/imageholder"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/house"
                    android:alpha="0.7" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/imageoverlay" />

                <TextView
                    android:id="@+id/title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginTop="5dp"
                    android:padding="16dp"
                    android:text="Two-Story Apartment in Ciudad Grande Phase I"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/neuebold" />

                <Button
                    android:id="@+id/viewDorm1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="70dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/viewdorm"
                    android:text="View Dorm"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/neuebold" />

                <ImageButton
                    android:id="@+id/bookmarkButton1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="18dp"
                    android:background="@drawable/viewdorm"
                    android:contentDescription="Bookmark"
                    android:scaleType="centerInside"
                    android:src="@drawable/bookmark" />
            </FrameLayout>

            <!-- Card 2 -->
            <FrameLayout
                android:layout_width="350dp"
                android:layout_height="370dp"
                android:layout_marginTop="30dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/imageholder"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/phase3h"
                    android:alpha="0.7" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/imageoverlay" />

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:padding="16dp"
                    android:text="Solo Room for Rent in Bakakeng Phase 3"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/neuebold" />

                <Button
                    android:id="@+id/viewDorm2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="70dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/viewdorm"
                    android:text="View Dorm"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/neuebold"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="8dp" />

                <ImageButton
                    android:id="@+id/bookmarkButton2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="18dp"
                    android:background="@drawable/viewdorm"
                    android:contentDescription="Bookmark"
                    android:scaleType="centerInside"
                    android:src="@drawable/bookmark" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Updated Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_nav_bar"
        android:layout_width="390dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_topbar"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/nav_nearby"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/nearp" />

        <ImageView
            android:id="@+id/nav_chat"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="32dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/chat" />

        <ImageView
            android:id="@+id/nav_home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="24dp"
            android:background="@drawable/circle_mask"
            android:scaleType="centerInside"
            android:padding="5dp"
            android:src="@drawable/nav_dorm" />

        <ImageView
            android:id="@+id/nav_notifications"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="32dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/bell" />

        <!-- Retained Old Profile Icon -->
        <ImageView
            android:id="@+id/nav_profile"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/user" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
