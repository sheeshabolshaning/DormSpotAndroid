<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1F3B"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back_arrow"
            android:layout_marginBottom="16dp"
            android:contentDescription="Back"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/textView_formTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add a New Listing"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/wafflesoft"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:id="@+id/editText_dormName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dorm Name"
            android:background="@drawable/rounded_input_bg"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/neuemedium"/>

        <EditText
            android:id="@+id/editText_capacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Capacity"
            android:inputType="number"
            android:background="@drawable/rounded_input_bg"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/neuemedium"/>

        <EditText
            android:id="@+id/editText_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price (â‚±)"
            android:inputType="numberDecimal"
            android:background="@drawable/rounded_input_bg"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/neuemedium"/>

        <EditText
            android:id="@+id/editText_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Status (occupied/unoccupied)"
            android:background="@drawable/rounded_input_bg"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/neuemedium"/>

        <EditText
            android:id="@+id/editText_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location"
            android:background="@drawable/rounded_input_bg"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/neuemedium"/>

        <EditText
            android:id="@+id/editText_landmark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Landmark"
            android:background="@drawable/rounded_input_bg"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/neuemedium"/>


        <EditText
            android:id="@+id/editText_inclusions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Inclusions"
            android:background="@drawable/rounded_input_bg"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/neuemedium"/>

        <EditText
            android:id="@+id/editText_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:background="@drawable/rounded_input_bg"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:minLines="3"
            android:gravity="top"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/neuemedium"/>

        <Button
            android:id="@+id/button_submit_listing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textStyle="bold"
            android:textColor="#1E1F3B"
            android:background="@drawable/rounded_button_20"
            android:backgroundTint="@color/mint"
            android:padding="12dp"
            android:fontFamily="@font/neuebold"/>
    </LinearLayout>
</ScrollView>
