<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="#424470">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp">

        <!-- Header Row -->

        <!-- Verification Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:background="@drawable/circle_mask"
                android:contentDescription="verification_pic"
                android:scaleType="centerCrop"
                android:src="@drawable/gudalupe" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/neuebold"
                    android:text="Dante Gudalupe"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Spottee Verification"
            android:textColor="#88C8FF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Document Processing: Incomplete"
            android:layout_marginStart="12dp"
            android:textStyle="bold"
            android:fontFamily="@font/neuemedium"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

        <!-- Action Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_margin="12dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Pending"
                android:textColor="#FF6B6B"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/neuemedium"
                android:layout_marginTop="-2dp"
                android:layout_marginEnd="190dp"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button2"
                android:backgroundTint="@color/white"
                android:text="VERIFY"
                android:textColor="#6290C3"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
