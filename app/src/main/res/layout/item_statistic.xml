<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="#424470">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Summary Info -->
        <TextView
            android:id="@+id/stat_dorm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dorm Title"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:fontFamily="@font/neuebold" />

        <!-- Metrics -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/stat_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="👁 12"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/neuemedium" />

            <TextView
                android:id="@+id/stat_saves"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💾 5"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/neuemedium" />

            <TextView
                android:id="@+id/stat_inquiries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="❗ 3"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/neuemedium" />
        </LinearLayout>

        <!-- Expandable/Editable Section -->
        <LinearLayout
            android:id="@+id/stat_expandable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <!-- Static info -->
            <TextView
                android:id="@+id/stat_rented_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rented: Jan - Mar"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:fontFamily="@font/neuemedium" />

            <TextView
                android:id="@+id/stat_occupancy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Occupant: 2/4"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:fontFamily="@font/neuemedium" />

            <TextView
                android:id="@+id/stat_revenue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Revenue: ₱0"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:fontFamily="@font/neuemedium" />

            <!-- Editable fields (initially hidden) -->
            <EditText
                android:id="@+id/edit_stat_rented_period"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Edit Rented Period"
                android:visibility="gone"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:textSize="13sp"
                android:fontFamily="@font/neuemedium" />

            <EditText
                android:id="@+id/edit_stat_occupancy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Edit Occupancy"
                android:visibility="gone"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:textSize="13sp"
                android:fontFamily="@font/neuemedium" />

            <EditText
                android:id="@+id/edit_stat_revenue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Edit Revenue"
                android:visibility="gone"
                android:inputType="number"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FFFFFF"
                android:textSize="13sp"
                android:fontFamily="@font/neuemedium" />

            <!-- Bottom Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="end|center_vertical">

                <TextView
                    android:id="@+id/stat_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unoccupied"
                    android:textColor="#FF4B4B"
                    android:textStyle="italic|bold"
                    android:layout_marginEnd="12dp"
                    android:fontFamily="@font/roboto" />

                <ImageView
                    android:id="@+id/button_edit_listing"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/editicon"
                    android:background="@drawable/rounded_button2"
                    android:padding="4dp"
                    app:tint="#FFFFFF" />
            </LinearLayout>

            <!-- Submit Button -->
            <Button
                android:id="@+id/button_submit_statistic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save"
                android:visibility="gone"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:backgroundTint="#1A1B41"
                android:background="@drawable/rounded_button_10"
                android:fontFamily="@font/neuebold" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
