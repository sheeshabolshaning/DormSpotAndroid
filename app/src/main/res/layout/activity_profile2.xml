<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2FBEF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="12dp"
                android:background="@drawable/bg_circle"
                android:backgroundTint="#1C1B46"
                android:contentDescription="back"
                android:src="@drawable/back" />
        </LinearLayout>

        <ScrollView
            android:layout_width="380dp"
            android:layout_height="575dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Back Arrow + Title -->


                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="12dp"
                    android:text="Spotee’s Profile"
                    android:textColor="#2B2E66"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <!-- Profile Card -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_button2"
                    android:backgroundTint="#1C1B47"
                    android:backgroundTintMode="src_in"
                    android:clipToPadding="false"
                    android:elevation="4dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Profile Image -->
                    <ImageView
                        android:id="@+id/profile_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/circle_mask"
                        android:contentDescription="profile_img"
                        android:padding="2dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/esther" /> <!-- Replace with actual photo -->


                    <!-- Edit Icon -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="0dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/rounded_button2"
                        android:backgroundTint="@color/light_blue"
                        android:contentDescription="edit"
                        android:src="@drawable/editicon" />


                    <!-- Name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Esther Sandy"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Email -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="esthersandy123@gmail.com"
                        android:textColor="#BBBBBB"
                        android:textSize="14sp" />

                    <!-- Phone -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(+63) 901 254 7654"
                        android:textColor="#BBBBBB"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:background="@drawable/rounded_button2"
                        android:backgroundTint="@color/white">

                        <!-- Section Header -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Listings Made"
                            android:textColor="@color/dormspot_bg"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp" />

                        <!-- Card 1 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/rounded_card_bg"
                            android:padding="12dp"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Womens Dormitory (Whole House) for Rent in Bakakeng Norte"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="#1C1B47" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bakakeng Norte"
                                android:textSize="12sp"
                                android:textColor="#777777" />
                        </LinearLayout>

                        <!-- Card 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/rounded_card_bg"
                            android:padding="12dp"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bungalow Apartment for rent in Ciudad Grande Phase III"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="#1C1B47" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ciudad Grande, Bakakeng Sur"
                                android:textSize="12sp"
                                android:textColor="#777777" />
                        </LinearLayout>

                        <!-- Card 3 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/rounded]_card_bg"
                            android:padding="12dp"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="AirBnB for family/tropa size in Bakakeng Sur"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:textColor="#1C1B47" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bakakeng Sur"
                                android:textSize="12sp"
                                android:textColor="#777777" />
                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:background="#1C1B47">

                        <!-- Ratings Header -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ratings"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:layout_marginBottom="12dp" />

                        <!-- Rating 1 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/rounded_rating_bg"
                            android:padding="16dp"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="“10/10 malinis lahat, friendly yung landlady, will stay again, buti nalang may Dorm Spot, naging madali yung paghahanap namin”"
                                android:textColor="#1C1B47"
                                android:textSize="13sp" />

                            <RatingBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:isIndicator="true"
                                android:numStars="5"
                                android:rating="5"
                                android:stepSize="1"
                                android:theme="@style/RatingBarCustom" />
                        </LinearLayout>

                        <!-- Rating 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/rounded_rating_bg"
                            android:padding="16dp"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="“Sobrang solid ng accommodations na available dito, parang hotel pero mas afford. Hindi lang for students yung available na listings, hindi na kailangang maghanap sa kung saan-saan na apps. Andito na lahat”"
                                android:textColor="#1C1B47"
                                android:textSize="13sp" />

                            <RatingBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:rating="5"
                                android:isIndicator="true"
                                android:stepSize="1"
                                android:layout_marginTop="8dp"
                                android:theme="@style/RatingBarCustom"/>
                        </LinearLayout>

                        <!-- Rating 3 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@drawable/rounded_rating_bg"
                            android:padding="16dp"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="“nagustohan ko yung dorm na nakuha ko gamit itong app. Maganda ang ambiance at komportable. Malaking tulong na rin ang reviews ng ibang tenants kaya alam kong maaasahan ito.”"
                                android:textColor="#1C1B47"
                                android:textSize="13sp" />

                            <RatingBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:rating="5"
                                android:isIndicator="true"
                                android:stepSize="1"
                                android:layout_marginTop="8dp"
                                android:theme="@style/RatingBarCustom"/>
                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_topbar"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/nearp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="32dp"
                android:src="@drawable/chat" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/circle_mask"
                android:backgroundTint="@color/white"
                android:src="@drawable/nav_dorm" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="32dp"
                android:src="@drawable/bell" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/user" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

