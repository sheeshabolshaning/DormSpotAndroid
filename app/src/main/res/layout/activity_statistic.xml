<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/statistic"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF8E5"
    tools:context="com.example.dormspot.MainAcitivitySpottee.statistic">

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top App Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_topbar"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="14dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/dormlandlord" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/dorm_spot"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:paddingStart="12dp"
                android:textStyle="bold"
                tools:ignore="RtlSymmetry"
                android:fontFamily="@font/wafflesoft"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/searchwhite"
                app:tint="#FFFFFF" />
        </LinearLayout>

        <!-- Tabs -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="14dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                style="@style/TabButton"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button2"
                android:text="My listing"
                android:backgroundTint="#618EC0"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14sp"
                android:fontFamily="@font/neuebold"/>

            <Button
                style="@style/TabButton"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button2"
                android:backgroundTint="#3C396A"
                android:text="Statistic"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14sp"
                android:fontFamily="@font/neuebold"/>

            <Button
                style="@style/TabButton"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button2"
                android:backgroundTint="#618EC0"
                android:text="Reviews"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="14sp"
                android:fontFamily="@font/neuebold"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Listing 1: Unoccupied -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="154dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_card"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eagle Crest Phase 3 Solo Room"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/neuebold"/>


                    <LinearLayout
                        android:layout_width="355dp"
                        android:layout_height="wrap_content"
                        android:gravity="start">

                        <ImageView
                            app:tint="#FFFFFF"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/view" />


                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  Capacity: "
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="@font/neuebold"/>

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="44dp"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start">

                        <ImageView
                            app:tint="#FFFFFF"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:src="@drawable/save" />

                        <TextView
                            android:id="@+id/textView44"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  Saves by Users: "
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="@font/neuebold"/>

                        <TextView
                            android:id="@+id/textView55"
                            android:layout_width="279dp"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start">

                        <ImageView
                            app:tint="#FFFFFF"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/inquire" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  Inquires: "
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="@font/neuebold"/>

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="279dp"
                            android:layout_height="wrap_content"
                            android:text="4"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="131dp"
                            android:fontFamily="@font/roboto"
                            android:text="unoccupied"
                            android:textColor="#FF4B4B"
                            android:textStyle="italic|bold" />

                        <Button
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_button2"
                            android:text="View listing"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/neuebold"
                            android:textAllCaps="false"/>

                        <ImageView
                            app:tint="#FFFFFF"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/rounded_button2"
                            android:src="@drawable/editicon" />
                    </LinearLayout>
                </LinearLayout>


                <!-- Listing 2: Occupied -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="154dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_card"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ciudad Grande Phase 2 Bachelors Pad"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/neuebold"/>

                    <LinearLayout
                        android:layout_width="355dp"
                        android:layout_height="wrap_content"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rented from "
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="@font/neuebold"/>

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="235dp"
                            android:layout_height="wrap_content"
                            android:text="Jan 23, 2024 - Mar 23, 2024"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Occupant: "
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="@font/neuebold"/>

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="279dp"
                            android:layout_height="wrap_content"
                            android:text="1/1"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Revenue: "
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="@font/neuebold"/>

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="279dp"
                            android:layout_height="wrap_content"
                            android:text="₱30,000"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="145dp"
                            android:text="Occupied"
                            android:textColor="#52FD15"
                            android:textStyle="italic|bold"
                            android:fontFamily="@font/roboto"/>

                        <Button
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_button2"
                            android:text="View listing"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/neuebold"
                            android:textAllCaps="false"/>

                        <ImageView
                            app:tint="#FFFFFF"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/rounded_button2"
                            android:src="@drawable/editicon" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Listing 3: Occupied -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="154dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/rounded_card"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eagle Crest Phase 1 Bedspacer"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/neuebold"/>

                    <LinearLayout
                        android:layout_width="355dp"
                        android:layout_height="wrap_content"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/textView177"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rented from: "
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="@font/neuebold"/>

                        <TextView
                            android:id="@+id/textView18.8"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:text="Jan 23, 2024 - Mar 23, 2024"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/textView166"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Occupant: "
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="@font/neuebold"/>

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="279dp"
                            android:layout_height="wrap_content"
                            android:text="3/4"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start">

                        <TextView
                            android:id="@+id/textView16.6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Revenue: "
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/textView17.7"
                            android:layout_width="279dp"
                            android:layout_height="wrap_content"
                            android:text="₱90,000"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="8dp"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="145dp"
                            android:text="Occupied"
                            android:textColor="#52FD15"
                            android:textStyle="italic|bold"
                            android:fontFamily="@font/roboto"/>

                        <Button
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_button2"
                            android:text="View listing"
                            android:textColor="#FFFFFF"
                            android:fontFamily="@font/neuebold"
                            android:textAllCaps="false"/>

                        <ImageView
                            app:tint="#FFFFFF"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/rounded_button2"
                            android:src="@drawable/editicon" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <!--nav -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_topbar"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/nearp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="32dp"
                android:src="@drawable/chat" />

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/circle_mask"
                android:backgroundTint="@color/white"
                android:src="@drawable/nav_dorm" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginHorizontal="32dp"
                android:src="@drawable/bell" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/user" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
